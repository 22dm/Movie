<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.cinema.data.management.HallMapper">

    <select id="selectAllHall" resultMap="Hall">
        select * from `hall`
    </select>

    <select id="selectHall" resultMap="Hall">
        select * from `hall` where `id` = #{id}
    </select>

    <insert id="addHall" parameterType="com.example.cinema.po.Hall" useGeneratedKeys="true" keyProperty="id">
        insert into `hall`(`name`, `column`, `row`)
        values (#{name}, #{column},  #{row})
    </insert>

    <update id="updateHall" parameterType="com.example.cinema.po.Hall">
        update `hall`
        set `name` = #{name}, `column` = #{column}, `row` = #{row}
        where `id` = #{id}
    </update>

    <delete id="deleteHall" parameterType="com.example.cinema.po.Hall">
        delete from `hall`
        where `id` = #{id}
    </delete>

    <select id="selectInvalidSeats" resultMap="InvalidSeat">
        select * from `invalidSeats` where `id` = #{id}
    </select>

    <insert id="addInvalidSeats" parameterType="java.util.List">
        insert into `invalidSeats`(`id`, `column`, `row`)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.id}, #{item.column}, #{item.row})
        </foreach>
    </insert>

    <delete id="deleteInvalidSeats">
        delete from `invalidSeats`
        where `id` = #{id}
    </delete>

    <resultMap id="InvalidSeat" type="com.example.cinema.po.InvalidSeat">
    </resultMap>

    <resultMap id="Hall" type="com.example.cinema.po.Hall">
    </resultMap>
</mapper>